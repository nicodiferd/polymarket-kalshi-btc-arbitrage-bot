# ==============================================
# Mullvad VPN Configuration
# ==============================================
# Get these from your WireGuard config file downloaded from mullvad.net
MULLVAD_PRIVATE_KEY=your-wireguard-private-key-here
MULLVAD_ADDRESS=10.x.x.x/32

# ==============================================
# Polymarket Configuration
# ==============================================
# Export from Polymarket wallet settings
POLYMARKET_PRIVATE_KEY=0x...
POLYMARKET_FUNDER_ADDRESS=0x...
POLYMARKET_SIGNATURE_TYPE=1

# ==============================================
# Kalshi Configuration
# ==============================================
# Get from kalshi.com/account/api (or demo.kalshi.co for demo)
KALSHI_API_KEY_ID=your-api-key-id
# Note: Place your kalshi_private_key.pem in the ./keys/ directory
KALSHI_USE_DEMO=true

# ==============================================
# Trading Configuration
# ==============================================
PAPER_TRADING=true
MIN_PROFIT_MARGIN=0.02
MAX_POSITION_SIZE=100
